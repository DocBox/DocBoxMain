@model docbox.Models.DX_FILES

@{
    ViewBag.Title = "Delete";
     Layout = "~/Views/Shared/_DocumentLayout.cshtml";
}

<h2 class="info-text">Delete</h2>
    
<h3>Are you sure you want to delete the file?</h3>
@using (Html.BeginForm("DeleteConfirmed", "Documents", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="fileId" value="@ViewData["fileId"]" />
    <input type="hidden" name="originalCaller" value="@ViewData["originalCaller"]" />
    
<div class="control-group">
<label class="control-label">File Name</label>
    
  <div class="controls"> 
  <label class="control-label">@ViewData["fileName"]</label>
    </div>
  </div>
  <div class="control-group">
        <label class="control-label">Owner</label>
    <div class="controls">
        @ViewData["createdBy"]
    </div>
    </div>

    
  <div class="control-group">
            <div class="controls">
        <input type="submit" value="Delete" class="btn btn-primary"/>
</div>
                        </div>
    
}