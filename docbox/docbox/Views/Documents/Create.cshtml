<script type="text/javascript">
    function update() {
        if (document.getElementById("encCheck").checked) {
            document.getElementById("keyFile").disabled = false;
        }
        else
            document.getElementById("keyFile").disabled = true;
        document.getElementById("keyFile").value = "";
    }

</script>

