@model docbox.Models.DX_FILEVERSION

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DocumentLayout.cshtml";
}

<h2 class="text-info">Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("EditDescription", "Documents", FormMethod.Post,new {enctype="multipart/form-data"})){
        <input type="hidden" name="originalCaller" value="@ViewData["originalCaller"]" />
        
        <input type="hidden" name="fileId" value="@ViewData["fileId"]" />
        <fieldset>
            <div class="control-group">
             <label class="control-label" for="description">Description</label>
            <div class="controls">
            <input type="text" name="description" id="description" maxlength="75" value="@Html.DisplayFor(model => model.description)"/>
            <span class="label label-info">Max 75 characters</span>
    </div>
</div>
        
            <div class="control-group">
            <div class="controls">
            <input type="submit" value="Submit" class="btn btn-primary"/>
           
                        </div>
                        </div> 
        </fieldset>  


<div>
           @if (@Html.ViewData["originalCaller"].ToString() == "DepartmentFiles")
           {
        @Html.ActionLink("Back to List", @Html.ViewData["originalCaller"].ToString(), new { dept = TempData["dept"] as string })
           }
           else
           {
        @Html.ActionLink("Back to List", @Html.ViewData["originalCaller"].ToString())
           }
    
</div>


}


